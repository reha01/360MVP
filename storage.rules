rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Member imports - permitir a usuarios autenticados subir archivos
    match /uploads/{orgId}/member_imports/{jobId}/{fileName=**} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a cualquier archivo para usuarios autenticados
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

