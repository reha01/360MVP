# ==================== FIREBASE CONFIGURATION ====================
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdefg

# ==================== ENVIRONMENT SETTINGS ====================
VITE_USE_EMULATORS=true
VITE_ENVIRONMENT=local
VITE_TENANT_DEFAULT=demo-corp

# ==================== FEATURE FLAGS ====================
VITE_FEATURE_ORG=true
VITE_FEATURE_PDF=true
VITE_FEATURE_INVITES=true
VITE_FEATURE_WIZARD=true
VITE_FEATURE_CREDITS=false

# ==================== PERFORMANCE & DEBUG ====================
VITE_DEBUG_LOGS=true
VITE_PERFORMANCE_METRICS=true

# ==================== URLs & ENDPOINTS ====================
VITE_APP_BASE_URL=http://127.0.0.1:5178
VITE_AUTH_EMULATOR_URL=http://127.0.0.1:9099
