{
  "name": "360mvp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "firebase": "^12.3.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.3.0",
    "recharts": "^2.15.4",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "scripts": {
    "dev": "vite --port 5178 --strictPort --host 127.0.0.1",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "preview": "vite preview --port 5179 --strictPort --host 127.0.0.1",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "echo 'Linting with built-in checks'",
    "typecheck": "echo 'TypeScript check - no tsconfig found'",
    "deploy:staging": "npm run build:staging && firebase use staging && firebase deploy --only hosting",
    "deploy:production": "npm run build:production && firebase use production && firebase deploy --only hosting:production",
    "deploy:preview": "npm run build:staging && firebase hosting:channel:deploy preview-$(git rev-parse --short HEAD)",
    "emulators": "firebase emulators:start --only auth,firestore,ui",
    "emulators:dev": "concurrently \"npm run emulators\" \"npm run dev\"",
    "emulators:rules": "firebase emulators:start --only auth,firestore,ui --import=./firebase-data",
    "db:reset": "firebase emulators:exec --only firestore \"echo 'Database reset'\"",
    "multitenant:test": "node scripts/smoke-test.js",
    "multitenant:test:phase1": "node scripts/test-phase1.js",
    "multitenant:test:phase2": "node scripts/test-phase2.js",
    "multitenant:validate:scoping": "node scripts/validate-scoping.js",
    "multitenant:backfill:dry": "node scripts/backfill-organizations.js --dry-run",
    "multitenant:backfill": "node scripts/backfill-organizations.js --execute",
    "multitenant:validate": "node scripts/backfill-organizations.js --validate",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "playwright test tests/smoke --reporter=line",
    "test:smoke:staging": "STAGING_BASE_URL=https://mvp-staging-3e1cd.web.app playwright test tests/smoke --reporter=line",
    "test:smoke:headed": "playwright test tests/smoke --headed",
    "test:smoke:debug": "playwright test tests/smoke --debug",
    "test:auth:capture": "cross-env STAGING_BASE_URL=https://mvp-staging-3e1cd.web.app playwright test tests/auth/capture-state.spec.ts --project=chromium --headed --debug",
    "test:smoke:staging:auth": "cross-env STAGING_BASE_URL=https://mvp-staging-3e1cd.web.app STORAGE_STATE=tests/.auth/state.json playwright test tests/smoke --reporter=line",
    "test:rules": "firebase emulators:exec --only firestore \"vitest run tests/rules --reporter=dot\" --project demo-test"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@playwright/test": "^1.55.0",
    "@vitejs/plugin-react": "^5.0.3",
    "cross-env": "^10.0.0",
    "firebase-admin": "^13.5.0",
    "vite": "^7.1.6",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^2.1.8"
  }
}
